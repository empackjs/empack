{
  "name": "empack",
  "version": "0.0.17",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zongben/empack.git"
  },
  "scripts": {
    "build": "npx tsc -p tsconfig.build.json",
    "copy": "cp ./package.json ./README.md ./LICENSE ./dist/",
    "pack": "npm run build && npm run copy && cd ./dist && npm pack",
    "pub": "npm run build && npm run copy && cd ./dist && npm publish",
    "test:server": "nodemon tests/server/main.ts"
  },
  "type": "module",
  "main": "./index.js",
  "types": "./index.d.ts",
  "exports": {
    ".": {
      "import": "./index.js",
      "types": "./index.d.ts"
    },
    "./app": {
      "import": "./app/index.js",
      "types": "./app/index.d.ts"
    },
    "./controller": {
      "import": "./controller/index.js",
      "types": "./controller/index.d.ts"
    },
    "./di": {
      "import": "./di/index.js",
      "types": "./di/index.d.ts"
    },
    "./jwt": {
      "import": "./jwt/index.js",
      "types": "./jwt/index.d.ts"
    },
    "./logger": {
      "import": "./logger/index.js",
      "types": "./logger/index.d.ts"
    },
    "./mediator": {
      "import": "./mediator/index.js",
      "types": "./mediator/index.d.ts"
    },
    "./result": {
      "import": "./result/index.js",
      "types": "./result/index.d.ts"
    },
    "./uploader": {
      "import": "./uploader/index.js",
      "types": "./uploader/index.d.ts"
    },
    "./utils": {
      "import": "./utils/index.js",
      "types": "./utils/index.d.ts"
    },
    "./validator": {
      "import": "./validator/index.js",
      "types": "./validator/index.d.ts"
    }
  },
  "files": [
    "./app",
    "./controller",
    "./di",
    "./jwt",
    "./logger",
    "./mediator",
    "./result",
    "./uploader",
    "./utils",
    "./validator",
    "./index.*"
  ],
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.1.0",
    "@types/on-finished": "^2.3.5",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "eslint": "^9.31.0",
    "globals": "^16.3.0",
    "jest": "^30.0.5",
    "nodemon": "^3.1.10",
    "reflect-metadata": "^0.2.2",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.38.0"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^17.2.0",
    "express": "^5.1.0",
    "express-validator": "^7.2.1",
    "inversify": "^7.6.1",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "uuid": "^11.1.0",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "ws": "^8.18.3"
  }
}
