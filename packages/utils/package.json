{
  "name": "@empackjs/utils",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/empackjs/empack"
  },
  "scripts": {
    "build": "tsup",
    "copy": "cp ./package.json ./README.md ./LICENSE ./dist/",
    "pack": "npm run build && npm run copy && cd ./dist && npm pack",
    "pub": "npm run build && npm run copy && cd ./dist && npm publish"
  },
  "types": "./index.d.ts",
  "exports": {
    ".": {
      "require": "./index.js",
      "import": "./index.mjs"
    }
  },
  "files": [
    "./index.*"
  ],
  "devDependencies": {
    "@swc/core": "^1.13.2",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "@types/on-finished": "^2.3.5",
    "tsup": "^8.5.0"
  },
  "dependencies": {
    "express-validator": "^7.2.1",
    "jsonwebtoken": "^9.0.2",
    "uuid": "^11.1.0",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0"
  }
}
